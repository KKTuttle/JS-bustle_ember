<h3>Current Stories:</h3>
<div class="row">
  {{#each model as |story|}}
    <div class="col-sm-4">
      <img class="boxImage" src={{story.photo}} alt={{story.headline}}>
      <div class="container-description">
        {{#link-to 'story' story.id}}{{story.headline}}{{/link-to}}
        <div class="story-author">
            <h6>by {{story.author}}</h6>
        </div>
      </div>
    </div>
  {{/each}}
</div>
