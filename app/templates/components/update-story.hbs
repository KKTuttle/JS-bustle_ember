{{#if updateStoryForm}}
  <h4>Update {{story.headline}} by {{story.author}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="headline">Headline</label>
          {{input value=headline id="headline" placeholder=story.headline}}
        </div>

        <div class="form-group">
          <label for="photo">Photo</label>
          {{input value=photo id="photo" placeholder=story.photo}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" placeholder=story.author}}
        </div>

        <div class="form-group">
          <label for="articleText">Text of Article</label>
          {{input value=articleText id="articleText" placeholder=story.articleText}}
        </div>

        <button {{action 'update' story}}>Save</button>
      </form>
    </div>
{{else}}
  <button {{action 'updateStoryForm'}}>Update</button>
{{/if}}
